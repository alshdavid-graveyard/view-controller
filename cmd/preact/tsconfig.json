{
  "compilerOptions": {
    "incremental": true,
    "target": "es6",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "jsx": "react",
    "jsxFactory": "h",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "~/*": [
        "../../*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true
  }
}